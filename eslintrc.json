{
  "env": {
    "browser": true,
    "webextensions": true
  },
  "extends": [
    "airbnb",
    "airbnb/hooks"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "overrides": [
    {
      "files": [
        "src/**/*.ts",
        "src/**/*.tsx"
      ],
      "env": {
        "browser": true,
        "webextensions": true
      },
      "extends": [
        "airbnb",
        "airbnb/hooks",
        "airbnb-typescript"
      ],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    },
    {
      "files": [
        "scripts/**/*.js"
      ],
      "rules": {
        "no-console": "off"
      },
      "parserOptions": {
        "sourceType": "commonjs"
      },
      "env": {
        "node": true
      }
    }
  ]
}